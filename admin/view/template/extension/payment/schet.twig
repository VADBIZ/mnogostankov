{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-schet" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
	{% if success %}
    <div class="alert alert-success"><i class="fa fa-check-circle"></i> {{ success }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-schet" class="form-horizontal">
          <ul class="nav nav-tabs" id="language">
            {% for language in languages %}
              <li><a href="#language{{ language.language_id }}" data-toggle="tab"><img src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language.name }}" /> {{ language.name }}</a></li>
            {% endfor %}
          </ul>
		  <div class="tab-content">		  
		    {% for language in languages %}
			  <div class="tab-pane" id="language{{ language.language_id }}">
			    <div class="form-group required">
                  <label class="col-sm-3 control-label" for="input-supplier{{ language.language_id }}"><span data-toggle="tooltip" title="{{ help_supplier }}">{{ entry_supplier }}</span></label>
                  <div class="col-sm-9">
				    <div class="input-group">
					  <span class="input-group-addon"><i class="fa fa-truck fa-fw"></i></span>
                      <input name="payment_schet_supplier{{ language.language_id }}" type="text" size="20" placeholder="{{ entry_supplier }}" value="{{ attribute(_context, 'payment_schet_supplier' ~ language.language_id) }}" id="input-supplier{{ language.language_id }}" class="form-control" />
				    </div>
					{% if attribute(_context, 'error_supplier' ~ language.language_id) %}
				      <div class="text-danger">{{ attribute(_context, 'error_supplier' ~ language.language_id) }}</div>
					{% endif %}
				  </div>
                </div>
				<div class="form-group required">
                  <label class="col-sm-3 control-label" for="input-director{{ language.language_id }}"><span data-toggle="tooltip" title="{{ help_director }}">{{ entry_director }}</span></label>
                  <div class="col-sm-9">
				    <div class="input-group">
					  <span class="input-group-addon"><i class="fa fa-user fa-fw"></i></span>
                      <input name="payment_schet_director{{ language.language_id }}" type="text" size="20" placeholder="{{ entry_director }}" value="{{ attribute(_context, 'payment_schet_director' ~ language.language_id) }}" id="input-director{{ language.language_id }}" class="form-control" />
				    </div>
					{% if attribute(_context, 'error_director' ~ language.language_id) %}
				      <div class="text-danger">{{ attribute(_context, 'error_director' ~ language.language_id) }}</div>
					{% endif %}
				  </div>
                </div>
				<div class="form-group">
                  <label class="col-sm-3 control-label" for="input-accountant{{ language.language_id }}"><span data-toggle="tooltip" title="{{ help_accountant }}">{{ entry_accountant }}</span></label>
                  <div class="col-sm-9">
				    <div class="input-group">
					  <span class="input-group-addon"><i class="fa fa-user fa-fw"></i></span>
                      <input name="payment_schet_accountant{{ language.language_id }}" type="text" size="20" placeholder="{{ entry_accountant }}" value="{{ attribute(_context, 'payment_schet_accountant' ~ language.language_id) }}" id="input-accountant{{ language.language_id }}" class="form-control" />
				    </div>
				  </div>
                </div>
				<div class="form-group">
                  <label class="col-sm-3 control-label" for="input-legal-address{{ language.language_id }}"><span data-toggle="tooltip" title="{{ help_legal_address }}">{{ entry_legal_address }}</span></label>
                  <div class="col-sm-9">
				    <div class="input-group">
					  <span class="input-group-addon"><i class="fa fa-envelope fa-fw"></i></span>
                      <input name="payment_schet_legal_address{{ language.language_id }}" type="text" size="20" placeholder="{{ entry_legal_address }}" value="{{ attribute(_context, 'payment_schet_legal_address' ~ language.language_id) }}" id="input-legal-address{{ language.language_id }}" class="form-control" />
				    </div>
				  </div>
                </div>
				<div class="form-group">
                  <label class="col-sm-3 control-label" for="input-actual-address{{ language.language_id }}"><span data-toggle="tooltip" title="{{ help_actual_address }}">{{ entry_actual_address }}</span></label>
                  <div class="col-sm-9">
				    <div class="input-group">
					  <span class="input-group-addon"><i class="fa fa-home fa-fw"></i></span>
                      <input name="payment_schet_actual_address{{ language.language_id }}" type="text" size="20" placeholder="{{ entry_actual_address }}" value="{{ attribute(_context, 'payment_schet_actual_address' ~ language.language_id) }}" id="input-actual-address{{ language.language_id }}" class="form-control" />
				    </div>
				  </div>
                </div>
				<div class="form-group required">
                  <label class="col-sm-3 control-label" for="input-bank-supplier{{ language.language_id }}"><span data-toggle="tooltip" title="{{ help_bank_supplier }}">{{ entry_bank_supplier }}</span></label>
                  <div class="col-sm-9">
				    <div class="input-group">
					  <span class="input-group-addon"><i class="fa fa-bank fa-fw"></i></span>
                      <input name="payment_schet_bank_supplier{{ language.language_id }}" type="text" size="20" placeholder="{{ entry_bank_supplier }}" value="{{ attribute(_context, 'payment_schet_bank_supplier' ~ language.language_id) }}" id="input-bank-supplier{{ language.language_id }}" class="form-control" />
				    </div>
					{% if attribute(_context, 'error_bank_supplier' ~ language.language_id) %}
				      <div class="text-danger">{{ attribute(_context, 'error_bank_supplier' ~ language.language_id) }}</div>
					{% endif %}
				  </div>
                </div>
				<div class="form-group">
				  <label class="col-sm-3 control-label" for="input-description{{ language.language_id }}"><span data-toggle="tooltip" title="{{ help_description }}">{{ entry_description }}</span></label>
				  <div class="col-sm-9">
					<div class="input-group">
					  <span class="input-group-addon"><i class="fa fa-edit fa-fw"></i></span>
					  <textarea name="payment_schet_description{{ language.language_id }}" cols="80" rows="5" placeholder="{{ entry_description }}" id="input-description{{ language.language_id }}" class="form-control">{{ attribute(_context, 'payment_schet_description' ~ language.language_id) }}</textarea>
				    </div>
				  </div>
			    </div>
				<div class="form-group">
				  <label class="col-sm-3 control-label" for="input-instruction{{ language.language_id }}"><span data-toggle="tooltip" title="{{ help_instruction }}">{{ entry_instruction }}</span></label>
				  <div class="col-sm-9">
					<div class="input-group">
					  <span class="input-group-addon"><i class="fa fa-edit fa-fw"></i></span>
					  <textarea name="payment_schet_instruction{{ language.language_id }}" cols="80" rows="5" placeholder="{{ entry_instruction }}" id="input-instruction{{ language.language_id }}" class="form-control">{{ attribute(_context, 'payment_schet_instruction' ~ language.language_id) }}</textarea>
				    </div>
				  </div>
			    </div>
			  </div>
			{% endfor %}
		  </div>
		  <div class="form-group required">
            <label class="col-sm-3 control-label" for="input-inn">{{ entry_inn }}</label>
            <div class="col-sm-9">
              <div class="input-group">
				<span class="input-group-addon"><i class="fa fa-newspaper-o fa-fw"></i></span>
			    <input type="text" name="payment_schet_inn" value="{{ payment_schet_inn }}" placeholder="{{ entry_inn }}" id="input-inn" class="form-control" />
			  </div>
			  {% if error_inn %}
                <div class="text-danger">{{ error_inn }}</div>
              {% endif %}
			</div>
          </div>
		  <div class="form-group">
            <label class="col-sm-3 control-label" for="input-kpp">{{ entry_kpp }}</label>
            <div class="col-sm-9">
              <div class="input-group">
				<span class="input-group-addon"><i class="fa fa-file-text-o fa-fw"></i></span>
			    <input type="text" name="payment_schet_kpp" value="{{ payment_schet_kpp }}" placeholder="{{ entry_kpp }}" id="input-kpp" class="form-control" />
			  </div>
			</div>
          </div>
		  <div class="form-group required">
            <label class="col-sm-3 control-label" for="input-account">{{ entry_account }}</label>
            <div class="col-sm-9">
              <div class="input-group">
				<span class="input-group-addon"><i class="fa fa-credit-card fa-fw"></i></span>
			    <input type="text" name="payment_schet_account" value="{{ payment_schet_account }}" placeholder="{{ entry_account }}" id="input-account" class="form-control" />
			  </div>
			  {% if error_account %}
                <div class="text-danger">{{ error_account }}</div>
              {% endif %}
			</div>
          </div>
		  <div class="form-group required">
            <label class="col-sm-3 control-label" for="input-bik">{{ entry_bik }}</label>
            <div class="col-sm-9">
              <div class="input-group">
				<span class="input-group-addon"><i class="fa fa-qrcode fa-fw"></i></span>
			    <input type="text" name="payment_schet_bik" value="{{ payment_schet_bik }}" placeholder="{{ entry_bik }}" id="input-bik" class="form-control" />
			  </div>
			  {% if error_bik %}
                <div class="text-danger">{{ error_bik }}</div>
              {% endif %}
			</div>
          </div>
		  <div class="form-group required">
            <label class="col-sm-3 control-label" for="input-corschet">{{ entry_corschet }}</label>
            <div class="col-sm-9">
              <div class="input-group">
				<span class="input-group-addon"><i class="fa fa-money fa-fw"></i></span>
			    <input type="text" name="payment_schet_corschet" value="{{ payment_schet_corschet }}" placeholder="{{ entry_corschet }}" id="input-corschet" class="form-control" />
			  </div>
			  {% if error_corschet %}
                <div class="text-danger">{{ error_corschet }}</div>
              {% endif %}
			</div>
          </div>
		  <div class="form-group">
            <label class="col-sm-3 control-label" for="input-telephone">{{ entry_telephone }}</label>
            <div class="col-sm-9">
              <div class="input-group">
				<span class="input-group-addon"><i class="fa fa-phone fa-fw"></i></span>
			    <input type="text" name="payment_schet_telephone" value="{{ payment_schet_telephone }}" placeholder="{{ entry_telephone }}" id="input-telephone" class="form-control" />
			  </div>
			</div>
          </div>
		  <div class="form-group">
            <label class="col-sm-3 control-label" for="input-mobilephone">{{ entry_mobilephone }}</label>
            <div class="col-sm-9">
              <div class="input-group">
				<span class="input-group-addon"><i class="fa fa-mobile-phone fa-fw"></i></span>
			    <input type="text" name="payment_schet_mobilephone" value="{{ payment_schet_mobilephone }}" placeholder="{{ entry_mobilephone }}" id="input-mobilephone" class="form-control" />
			  </div>
			</div>
          </div>
		  <div class="form-group">
			<label class="col-sm-3 control-label">{{ entry_images }}</label>
			<div class="col-sm-3">
			  <label class="control-label" for="input-image-signature">{{ entry_signature }}</label>
			  <div style="margin-top:5px;">
			    <a href="" id="image-signature" data-toggle="image" class="img-thumbnail"><img src="{{ thumb_signature }}" data-placeholder="{{ placeholder }}" /></a>
			    <input type="hidden" name="payment_schet_image_signature" value="{{ payment_schet_image_signature }}"  id="input-image-signature" />
			  </div>
			</div>
			<div class="col-sm-3">
			  <label class="control-label" for="input-image-signature-accountant">{{ entry_signature_accountant }}</label>
			  <div style="margin-top:5px;">
			    <a href="" id="image-signature-accountant" data-toggle="image" class="img-thumbnail"><img src="{{ thumb_signature_accountant }}" data-placeholder="{{ placeholder }}" /></a>
			    <input type="hidden" name="payment_schet_image_signature_accountant" value="{{ payment_schet_image_signature_accountant }}"  id="input-image-signature-accountant" />
			  </div>
			</div>
			<div class="col-sm-3">
			  <label class="control-label" for="input-image-stamp">{{ entry_stamp }}</label>
			  <div style="margin-top:5px;">
			    <a href="" id="image-stamp" data-toggle="image" class="img-thumbnail"><img src="{{ thumb_stamp }}" data-placeholder="{{ placeholder }}" /></a>
			    <input type="hidden" name="payment_schet_image_stamp" value="{{ payment_schet_image_stamp }}"  id="input-image-stamp" />
			  </div>
			</div>
		  </div>
		  <div class="form-group">
			<label class="col-sm-3 control-label">{{ entry_size_images }}</label>
			<div class="col-sm-3">
			  <div class="input-group">
				<span class="input-group-addon"><i class="fa fa-arrows-h fa-fw"></i></span>
				<input type="text" name="payment_schet_signature_width" value="{{ payment_schet_signature_width }}" placeholder="{{ entry_width }}"class="form-control" />
				<span class="input-group-addon"><i class="fa fa-arrows-v fa-fw"></i></span>
				<input type="text" name="payment_schet_signature_height" value="{{ payment_schet_signature_height }}" placeholder="{{ entry_height }}"class="form-control" />
			  </div>
			</div>
			<div class="col-sm-3">
			  <div class="input-group">
				<span class="input-group-addon"><i class="fa fa-arrows-h fa-fw"></i></span>
				<input type="text" name="payment_schet_signature_accountant_width" value="{{ payment_schet_signature_accountant_width }}" placeholder="{{ entry_width }}"class="form-control" />
				<span class="input-group-addon"><i class="fa fa-arrows-v fa-fw"></i></span>
				<input type="text" name="payment_schet_signature_accountant_height" value="{{ payment_schet_signature_accountant_height }}" placeholder="{{ entry_height }}"class="form-control" />
			  </div>
			</div>
			<div class="col-sm-3">
			  <div class="input-group">
				<span class="input-group-addon"><i class="fa fa-arrows-h fa-fw"></i></span>
				<input type="text" name="payment_schet_stamp_width" value="{{ payment_schet_stamp_width }}" placeholder="{{ entry_width }}"class="form-control" />
				<span class="input-group-addon"><i class="fa fa-arrows-v fa-fw"></i></span>
				<input type="text" name="payment_schet_stamp_height" value="{{ payment_schet_stamp_height }}" placeholder="{{ entry_height }}"class="form-control" />
			  </div>
			</div>
		  </div>
		  <div class="form-group">
            <label class="col-sm-3 control-label" for="input-total"><span data-toggle="tooltip" title="{{ help_total }}">{{ entry_total }}</span></label>
            <div class="col-sm-9">
			  <div class="input-group">
				<span class="input-group-addon"><i class="fa fa-expand fa-fw"></i></span>
                <input type="text" name="payment_schet_total" value="{{ payment_schet_total }}" placeholder="{{ entry_total }}" id="input-total" class="form-control" />
              </div>
			</div>
          </div>
          <div class="form-group">
            <label class="col-sm-3 control-label" for="input-order-status">{{ entry_order_status }}</label>
            <div class="col-sm-9">
              <div class="input-group">
				<span class="input-group-addon"><i class="fa fa-spinner fa-spin fa-fw"></i></span>
			    <select name="payment_schet_order_status_id" id="input-order-status" class="form-control">
                  {% for order_status in order_statuses %}
					{% if order_status.order_status_id == payment_schet_order_status_id %}
					<option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
					{% else %}
					<option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
					{% endif %}
				 {% endfor %}
                </select>
			  </div>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-3 control-label" for="input-geo-zone">{{ entry_geo_zone }}</label>
            <div class="col-sm-9">
              <div class="input-group">
				<span class="input-group-addon"><i class="fa fa-globe fa-fw"></i></span>
			    <select name="payment_schet_geo_zone_id" id="input-geo-zone" class="form-control">
                  <option value="0">{{ text_all_zones }}</option>
                  {% for geo_zone in geo_zones %}
					{% if geo_zone.geo_zone_id == payment_schet_geo_zone_id %}
					<option value="{{ geo_zone.geo_zone_id }}" selected="selected">{{ geo_zone.name }}</option>
					{% else %}
					<option value="{{ geo_zone.geo_zone_id }}">{{ geo_zone.name }}</option>
					{% endif %}
				 {% endfor %}
                </select>
			  </div>
            </div>
          </div>
		  <div class="form-group">
            <label class="col-sm-3 control-label" for="input-sort-order">{{ entry_sort_order }}</label>
            <div class="col-sm-9">
              <div class="input-group">
				<span class="input-group-addon"><i class="fa fa-sort-numeric-asc fa-fw"></i></span>
			    <input type="text" name="payment_schet_sort_order" value="{{ payment_schet_sort_order }}" placeholder="{{ entry_sort_order }}" id="input-sort-order" class="form-control" />
              </div>
			</div>
          </div>
          <div class="form-group">
            <label class="col-sm-3 control-label" for="input-status">{{ entry_status }}</label>
            <div class="col-sm-9">
              <div class="input-group">
				<span class="input-group-addon" id="selector"></span>
			    <select name="payment_schet_status" id="input-status" class="form-control">
                  {% if payment_schet_status %}
					<option value="1" selected="selected">{{ text_enabled }}</option>
					<option value="0">{{ text_disabled }}</option>
				  {% else %}
					<option value="1">{{ text_enabled }}</option>
					<option value="0" selected="selected">{{ text_disabled }}</option>
				  {% endif %}
                </select>
			  </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript"><!--
$(document).ready(function() {
	var selectStatus = $('#input-status');
	
	function selectedStatus(){
		if (selectStatus.val() != '0') {
			$('#selector').replaceWith('<span class="input-group-addon alert-success" id="selector"><i class="fa fa-check-circle fa-fw"></i></span>');
		} else {
			$('#selector').replaceWith('<span class="input-group-addon alert-danger" id="selector"><i class="fa fa-power-off fa-fw"></i></span>');
		}
	}	
	selectedStatus();
	
	selectStatus.on('change', function() {
		if (selectStatus.val() != '0') {
			$('#selector').replaceWith('<span class="input-group-addon alert-success" id="selector"><i class="fa fa-check-circle fa-fw"></i></span>');
		} else {
			$('#selector').replaceWith('<span class="input-group-addon alert-danger" id="selector"><i class="fa fa-power-off fa-fw"></i></span>');
		}
	});
});
$('#language a:first').tab('show');
//--></script>
{{ footer }}