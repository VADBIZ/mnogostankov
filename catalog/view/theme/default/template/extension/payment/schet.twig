<div class="well well-sm">
  <p>{{ description }}</p>
</div>
 <div class="buttons confirm-buttons">
  <div class="pull-right">
        
		
	<a id="button-confirm" class="btn btn-primary">{{ button_confirm }}</a>
  </div>
</div>
<script type="text/javascript"><!--
$('#button-print-invoice').on('click', function() {
	$('#button-confirm').trigger('click');
});
$('#button-confirm').on('click', function() {
	$.ajax({ 
		type: 'get',
		url: 'index.php?route=extension/payment/schet/confirm',
		cache: false,
		beforeSend: function() {
			window.open('{{ print }}');
			$('#button-confirm').button('loading');
		},
		complete: function() {
			$('#button-confirm').button('reset');
		},		
		success: function() {
			location = '{{ continue }}';
		}
	});
});
//--></script> 
