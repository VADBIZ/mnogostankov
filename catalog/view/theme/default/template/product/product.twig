$('#button-form1').on('click', function() {
    $.ajax({
		url: 'index.php?route=common/popups/add',
		type: 'post',
		dataType: 'json',
		data: $("#form-rev").serialize(),
		beforeSend: function() {
			$('#button-form1').button('loading');
		},
		complete: function() {
			$('#button-form1').button('reset');
		},
		success: function(json) {
			$('.text-danger').remove();

			if (json['error']) {
			    if(json['error']['name']) {
				    $('.for_1 .obj_name').addClass('has-error');
					$('.for_1 input[name=\'name\']').after('<div class="text-danger">' + json['error']['name'] + '</div>');
				}

				if(json['error']['telephone']) {
				    $('.for_1 .obj_telephone').addClass('has-error');
					$('.for_1 input[name=\'telephone\']').after('<div class="text-danger">' + json['error']['telephone'] + '</div>');
				}

				if(json['error']['email']) {
				    $('.for_1 .obj_email').addClass('has-error');
					$('.for_1 input[name=\'email\']').after('<div class="text-danger">' + json['error']['email'] + '</div>');
				}

				if(json['error']['agree']) {
				    $('.for_1 .obj_agree').addClass('has-error');

					$('.for_1 .ag').after('<div class="text-danger">' + json['error']['agree'] + '</div>');
				}

                if(json['error']['captcha']) {
                    $('.for_1 .obj_captcha').addClass('has-error');
                    $('.for_1 input[name=\'captcha\']').after('<div class="text-danger">' + json['error']['captcha'] + '</div>');
                }

			}

			if (json['success']) {
				$('.for_1').html('<div class="alert alert-success alert-dismissible"><i class="fa fa-check-circle"></i> ' + json['success'] + '</div>');
			}
		}
	});
});



