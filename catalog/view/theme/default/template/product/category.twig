{{ header }}
<div id="product-category" class="container">
  
  <div class="row">{{ column_left }}
    {% if column_left and column_right %}
    {% set class = 'col-sm-6' %}
    {% elseif column_left or column_right %}
    {% set class = 'col-sm-9' %}
    {% else %}
    {% set class = 'col-sm-12' %}
    {% endif %}
    <div id="content" class="{{ class }}">{{ content_top }}
	  <ul class="breadcrumb">
    {% for breadcrumb in breadcrumbs %}
    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
    {% endfor %}
  </ul>
      <h1>{{ heading_title }}</h1>
      {% if description %}
      <div class="row">
        <div class="col-sm-12">{{ description }}</div>
      </div>
      <hr>
      {% endif %}
     
      {% if products %}
      <div class="row">
        <div class="ssort col-md-12 col-xs-12 hidden-xs hidden-sm">
		    <span class="titl">{{ text_sort }}</span>
			{% for sorts in sorts %}
			    <span class="sort_name {% if sorts.val == sort %}activ{% endif %}"><a href="{{ sorts.href }}">{{ sorts.text }}</a></span>
			{% endfor %}
		</div>
        <div class="col-md-12 col-xs-12 visible-xs visible-sm">
          <div class="form-group input-group input-group-sm">
            <label class="input-group-addon" for="input-sort">{{ text_sort }}</label>
            <select id="input-sort" class="form-control" onchange="location = this.value;">
			   <option value="{{ href_categor }}">По умолчанию</option>
              {% for sorts in sorts %}
              {% if sorts.val == sort %}
              <option value="{{ sorts.href }}" selected="selected">{{ sorts.text }}</option>
              {% else %}
              <option value="{{ sorts.href }}">{{ sorts.text }}</option>
              {% endif %}
              {% endfor %}
            </select>
          </div>
        </div>
        
      </div>
      <div class="row spyns"> {% for product in products %}
        <div class="product-layout col-lg-3 col-md-3 col-sm-4 col-xs-6 yiy">
            <div class="product-thumb transition">
                <div class="image"><a href="{{ product.href }}"><img src="{{ product.thumb }}" alt="{{ product.name }}" title="{{ product.name }}" class="img-responsive" /></a></div>
                <div class="caption">
                    <h4><a href="{{ product.href }}">{{ product.name }}</a></h4>
                    <p class="brend">{{ product.manufacturer }}</p>
        
                    {% if product.price %}
                    <p class="price"> {% if not product.special %}
                    {{ product.price }}
                    {% else %} <span class="price-new">{{ product.special }}</span> <span class="price-old">{{ product.price }}</span> {% endif %}
                    </p>
                    {% endif %}
                </div>
                <div class="qt">
                    <button type="button" class="ct3" onclick="window.location.href='{{ product.href }}'">Подробнее</button>
                    <button type="button" class="ct2 {% if product.w %}activ{% endif %}" data-toggle="tooltip" title="{{ button_wishlist }}" onclick="wishlist.add('{{ product.product_id }}'); $(this).toggleClass('activ');"> </button>
                    <button type="button" class="ct2" data-toggle="tooltip" title="{{ button_compare }}" onclick="compare.add('{{ product.product_id }}'); $(this).toggleClass('activ');"> </button>
                </div>
            </div>
          </div>
        {% endfor %} </div>
      <div class="row">
        <div class="col-sm-6 text-left">{{ pagination }}</div>
        <div class="col-sm-6 text-right">{{ results }}</div>
      </div>
      {% endif %}
      {% if not categories and not products %}
      <p>{{ text_empty }}</p>
      <div class="buttons">
        <div class="pull-right"><a href="{{ continue }}" class="btn btn-primary">{{ button_continue }}</a></div>
      </div>
      {% endif %}
      {{ content_bottom }}</div>
    {{ column_right }}</div>
</div>
{{ footer }} 
